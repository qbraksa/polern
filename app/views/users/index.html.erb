

<div class="row">
	<div class="span12">
		<div class="box">
			<h1>Users</h1>
			<table class="table">
			<thead><th>Username</th><th>Email address</th><th># Resources</th><th># Communities</th></thead>
			<% @users.each do |user| %>
				<tr>
					<td>
						<%= link_to user.name, user %>
					</td>
					<td>
						<%= user.email %>
					</td>
					<td>
						<%= user.posted_ressources.count %>
					</td>
					<td>
						<%= user.communities.count %>
					</td>
				<tr>
			<% end %>
			</table>
		</div>
	</div>
</div>

<%= will_paginate @users %>
