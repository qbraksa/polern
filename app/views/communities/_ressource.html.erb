<div class="ressource">
	<div class="box">
		<div class="row-fluid">
			<div class="span6" >
				<div class="author">
					<small><%= link_to "#{ressource.owner.name}", ressource.owner %></small>
				</div>
			</div>
			<div class="span6">
				<div class="pull-right remove">
					<% if current_user && current_user.admin || current_user.own(ressource) %>
					<%= link_to raw('<span class="fui-cross-16"></span>
					'), ressource , { :method => :delete } %>
					<% end %>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span12" >
				<h3><%= link_to ressource.title, ressource.link %></h3>
				<small><%= get_host(ressource.link) %></small>
			</div>
		</div>

		<div class="row-fluid" >
			<div class="span12">
				<br/><br/>
				<div class="pull-right">	
					<% if !current_user.upvoted?(ressource.id) %>
						<div class="vote">
							<%= link_to raw("<span class='fui-heart-16'></span> #{ressource.users.count}"), { :action => :upvote,
								:controller => :ressources,
								:id => ressource.id },
								{ :method => :post } %>
						</div>
					<% else %>
						<div class="voted">
							<%= link_to raw("<span class='fui-heart-16'></span> #{ressource.users.count}"), { :action => :downvote,
								:controller => :ressources,
								:id => ressource.id },
								{ :method => :post } %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>